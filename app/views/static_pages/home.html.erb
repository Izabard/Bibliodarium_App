<%= provide(:title, "Home") %>
<% if logged_in? %>
    <div class="row">
  
        <aside class="col-md-4">
            <section class="aside_user_info">
                <%= render 'shared/user_info' %>
            </section>
            <section class="book_form">
                <%= render 'shared/book_form' %>
            </section>
        </aside>

        <div class="col-md-8 feed">
            <h3>Books Feed</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>  
<% else %>
    <div class="center ">
        <h1>Welcome to Bibliodarium</h1>
        <%= link_to "Sign up", signup_path, class: ""%>
    </div>

<% end %>