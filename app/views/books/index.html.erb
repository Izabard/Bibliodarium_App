<% provide(:title, @category.name ) %>
<div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-10">
    <aside class="col-md-4 withoutPad center">
        <section class="user_info">
            <h1>
                <%= gravatar_for current_user %>
                <%= current_user.username %>
            </h1>
        </section>
    </aside>

    <div id="user-show" class="col-md-8">
      
        <% if @books.any? %>
        <h3>Books of <%= @category.name %> (<%= @books.count %>)</h3>
            <ol style="list-style: none" class="books">
                <%= render @books %>
            </ol> 
        <% else %>
        <li class="dropdown" style="list-style: none">
         <h3>Books of <%= @category.name %> (<%= @books.count %>)</h3>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Categories <span class="caret"></span></a>
            <ul class="dropdown-menu" roles="menu">
            <li><%= link_to "All", user_path(current_user) %></li>
            <% Category.all.each do |category| %>
                <li>
                   <%= link_to category.name, user_books_path(current_user.id, category: category.name), class: "link" %>
                </li>
            <% end %>
            </ul>
        </li>
        
        <% end %>

    </div>

    </div>
    <div class="col-md-1">

    </div>
</div>

