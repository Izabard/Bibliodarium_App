<%= form_for(@book) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.label :Title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :Author %>
        <%= f.text_field :author, class: 'form-control' %>

        <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => "Select an category") %>
    </div>
    <%= f.submit "AÃ±adir", class: "btn btn-primary" %>
    <span class="cover">
        <%= f.file_field :cover, accept: 'image/jpeg, image/gif, image/png' %>
    </span>
<% end %>

<script type="text/javascript">
    $('#book_picture').bind('change', function(){
        var size_in_megabytes = this.files[0].size/1024/1024;
        if(size_in_megabytes > 1){
            alert('Maximum file size is 1MB. Please choose a smaller file.');
        }
    });
</script>

